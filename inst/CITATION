  person(
    given = "Ivan Jacob Agaloos",
    family = "Pesigan",
    role = c("aut", "cre", "cph"),
    email = "r.jeksterslab@gmail.com",
    comment = c(ORCID = "0000-0003-4818-8420")
  )
)
note <- sprintf(
  "R package version %s",
  meta$Version
)
url <- "https://github.com/jeksterslab/manCULTA"

bibentry(
